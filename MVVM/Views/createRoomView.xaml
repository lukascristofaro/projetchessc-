<Window x:Class="chess.MVVM.Views.createRoomView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Manager" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Room Name:"/>
            <TextBox x:Name="txtRoomName" Margin="0,0,0,10"/>

            <Button Content="Create Room" Click="CreateRoom_Click" Margin="0,0,0,10"/>
            <Button Content="Join Room" Click="JoinRoom_Click"/>
        </StackPanel>
    </Grid>
</Window>